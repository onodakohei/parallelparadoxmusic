---
layout: layouts/base.njk
---
<article class="release">
  <header class="release-header">
    <h1 class="title">{{ title }}</h1>
    <p class="meta">{{ date | date | year }} Â· {{ genres | join(", ") if genres }}</p>
    {% if cover %}<img src="{{ cover }}" alt="{{ title }} cover" class="cover">{% endif %}
  </header>

  {% if links %}
  <section class="release-links">
    <h2>Listen</h2>
    <ul>
      {% if links.spotify %}<li><a href="{{ links.spotify }}">Spotify</a></li>{% endif %}
      {% if links.apple %}<li><a href="{{ links.apple }}">Apple Music</a></li>{% endif %}
      {% if links.youtube %}<li><a href="{{ links.youtube }}">YouTube</a></li>{% endif %}
      {% if links.bandcamp %}<li><a href="{{ links.bandcamp }}">Bandcamp</a></li>{% endif %}
    </ul>
  </section>
  {% endif %}

  {% if tracks %}
  <section class="tracklist">
    <h2>Tracklist</h2>
    <ol>
      {% for t in tracks %}
      <li>{{ t.title }}{% if t.feat %} (feat. {{ t.feat }}){% endif %}</li>
      {% endfor %}
    </ol>
  </section>
  {% endif %}

  {% if notes %}
  <section class="notes">
    <h2>Notes</h2>
    {{ notes | safe }}
  </section>
  {% endif %}
</article>
